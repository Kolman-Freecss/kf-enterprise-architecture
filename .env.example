# Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_ACCOUNT_ID=123456789012

# AWS Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1

# AWS SageMaker Configuration
SAGEMAKER_ENDPOINT_NAME=document-classifier-endpoint
SAGEMAKER_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/SageMakerExecutionRole

# Vector Database Configuration
VECTOR_DB_PROVIDER=pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-east1-gcp
PINECONE_INDEX_NAME=document-vectors

# Alternative: ChromaDB (local development)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=documents

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/document_processing
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# S3 Configuration
S3_BUCKET_NAME=intelligent-document-processing
S3_REGION=us-east-1
S3_UPLOAD_PREFIX=uploads/
S3_PROCESSED_PREFIX=processed/

# Security Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Monitoring and Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=/aws/lambda/document-processor
CLOUDWATCH_LOG_STREAM=application-logs

# Cost Management
MAX_TOKENS_PER_REQUEST=4000
MONTHLY_BUDGET_LIMIT=1000
COST_ALERT_THRESHOLD=800

# Feature Flags
ENABLE_OCR=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_AUDIT_LOGGING=true

# MCP Server Configuration
MCP_SERVER_PORT=8080
MCP_SERVER_HOST=localhost
MCP_AGENT_TIMEOUT=30000

# Development Tools
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DETAILED_LOGGING=false